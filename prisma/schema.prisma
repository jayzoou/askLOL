generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


enum Region {
  LCK
  LPL
  LEC
  LTA
  OTHER
}

model Player {
  id            String   @id @default(cuid())
  region        Region

  leaguepediaId Int?     @unique
  slug          String   @unique
  name          String?
  country       String?
  role          String?
  teamName      String?
  overviewPage  String?
  player        String?
  image         String?
  nameAlphabet  String?
  nameFull      String?
  nativeName    String?
  nationality   String?
  nationalityPrimary String?
  age           Int?
  birthdate     String?
  deathdate     String?
  residencyFormer String?
  team2         String?
  currentTeams  String?
  teamSystem    String?
  team2System   String?
  residency     String?
  contract      String?
  contractText  String?
  favChamps     String?
  soloqueueIds  String?
  askfm         String?
  bluesky       String?
  discord       String?
  facebook      String?
  instagram     String?
  lolpros       String?
  dpmlol        String?
  reddit        String?
  snapchat      String?
  stream        String?
  kick          String?
  twitter       String?
  threads       String?
  linkedIn      String?
  vk            String?
  website       String?
  weibo         String?
  youtube       String?
  teamLast      String?
  roleLast      String?
  isRetired     Boolean?
  toWildrift    Boolean?
  toValorant    Boolean?
  toTFT         Boolean?
  toLegendsOfRuneterra Boolean?
  to2XKO        Boolean?
  isPersonality Boolean?
  isSubstitute  Boolean?
  isTrainee     Boolean?
  isLowercase   Boolean?
  isAutoTeam    Boolean?
  isLowContent  Boolean?

  isActive      Boolean  @default(true)

  dataHash      String?
  lastSyncedAt  DateTime @default(now())

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([region, isActive])
  @@index([teamName])
}
